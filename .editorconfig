root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

[*.md]
indent_size = 4
indent_style = space
trim_trailing_whitespace = false

[*.go]
indent_size = 4
indent_style = tab
trim_trailing_whitespace = true

[*.{cpp,hpp,c,h}]
indent_size = 4
indent_style = space
trim_trailing_whitespace = true

[*.{html,js,ts,jsx,tsx,json}]
indent_size = 2
indent_style = space
trim_trailing_whitespace = true
